<h3>StockItemsCreate</h3>
@page "/StockDeliveryNew"
@inherits StockDeliveryNewBase
@using PetStore.Blazor.WASM.Client.Components;
 
@if (StockDelivery == null)
{
<WaitLoading />
}
else
{
    <div class="alert @StatusClass">@Message</div>
    @if (!Saved)
    {

        <StockDeliveryNewTable StockDeliveryList="StockDeliveryList" />

        <EditForm Model="@StockDelivery" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">

            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group row">
                <label for="comment" class="col-sm-3">Name: </label>
                <InputText id="comment" class="form-control col-sm-8" @bind-Value="@StockDelivery.Name" placeholder="Enter Name" />
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => StockDelivery.Name)" />
            </div>

            <div class="form-group row">
                <label for="comment" class="col-sm-3">Quantity: </label>
                <InputNumber id="comment" class="form-control col-sm-8" @bind-Value="@StockDelivery.Quantity" placeholder="Enter Quantity" />
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => StockDelivery.Quantity)" />
            </div>

            <div class="float-right">
                <button type="submit" class="btn btn-primary edit-btn">
                    Save
                    <i class="fas fa-save"></i>
                </button>
                <a class="btn btn-outline-primary" @onclick="@NavigateBack">Cancel</a>
            </div>
        </EditForm>
    }
    @if (Saved)
    {
        <a class="btn btn-outline-primary" @onclick="@NavigateBack">Back to error</a>
    }
}